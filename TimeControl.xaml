<UserControl

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    x:Class="WpfApp1.TimeControl"

    Height="Auto" Width="Auto" x:Name="UserControl">
    
    <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2">

        <Grid x:Name="LayoutTimePicker" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TxtHours" Grid.Column="0" MaxLength="2" MinWidth="22" TextChanged="ChangeHours" Text="00"

                     TextAlignment="Right" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Transparent"/>


            <TextBlock x:Name="BlockSeparate" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"

                     Text=":" TextAlignment="Center"/>


            <TextBox  x:Name="TxtMinutes" Grid.Column="2" MaxLength="2" MinWidth="22" TextChanged="ChangeMinutes" Text="00"

                TextAlignment="Right" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Transparent"/>

        </Grid>
        
     </Border>

</UserControl>
