<UserControl

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    x:Class="WpfApp1.TimeControl"

    Height="Auto" Width="Auto" x:Name="UserControl">
    
    <Border CornerRadius="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2">

        <StackPanel x:Name="LayoutTimePicker" Orientation="Horizontal" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">


            <TextBox x:Name="TxtHours" MaxLength="2" Width="20" TextChanged="ChangeHours" Text="00"

                     TextAlignment="Right" VerticalAlignment="Center"  FontSize="14" BorderBrush="Transparent"/>


            <TextBlock  x:Name="BlockSeparate" VerticalAlignment="Center" 

                    FontSize="14" Text=":" TextAlignment="Center"/>


            <TextBox  x:Name="TxtMinutes" MaxLength="2" Width="20" TextChanged="ChangeMinutes" Text="00"

                TextAlignment="Right" VerticalAlignment="Center" FontSize="14" BorderBrush="Transparent"/>

        </StackPanel>
        
     </Border>

</UserControl>
