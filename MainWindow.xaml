<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Width="1000" Height="700">
    
    <DockPanel Name="MainLayout">

        <Grid Background="#ef3026" DockPanel.Dock="Top">

            <Button Name="AccueilButton" Style="{StaticResource Accueil}" Click="Accueil" ClickMode="Release"/>
            <Button Name="ConnexionButton" Style="{StaticResource Connexion}" Click="Connexion" ClickMode="Release"/>

        </Grid>
        
        <GroupBox Name="MainBox" Header="Accueil" DockPanel.Dock="Bottom" FontSize="20">
            <DockPanel Name="BoxLayout">

            </DockPanel>
        </GroupBox>
        
    </DockPanel>
</Window>
